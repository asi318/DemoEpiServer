@using DemoEpiServer
@model PageViewModel<CommonPage>

<h1 @Html.EditAttributes(x => x.CurrentPage.MetaTitle)>@Model.CurrentPage.MetaTitle</h1>

<div class="row">
    <div class="col-md-8 clearfix" @Html.EditAttributes(x => x.CurrentPage.MainBody)>
        <p class="introduction" @Html.EditAttributes(x => x.CurrentPage.MetaDescription)>@Model.CurrentPage.MetaDescription</p>
        @Html.DisplayFor(m => m.CurrentPage.MainBody)
    </div>
    <div class="col-md-4">
        @Html.PropertyFor(x => x.CurrentPage.RightPanelContentArea, new { CssClass = "row", Tag = Global.ContentAreaTags.OneThirdWidth })
    </div>
</div>



